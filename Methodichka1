month = int(input("Введите номер месяца от 1 до 12ти : "))
mlist = ["зима", "весна", "лето", "осень"]
while True:
    if month == 1 : print("сиз жазган саннын ай январь")
    if month == 2 : print("сиз жазган саннын ай февраль")
    if month == 3 : print("сиз жазган саннын ай март")
    if month == 4 : print("сиз жазган саннын ай апрель")
    if month == 5 : print("сиз жазган саннын ай май")
    if month == 6 : print("сиз жазган саннын ай июнь")
    if month == 7 : print("сиз жазган саннын ай июль")
    if month == 8 : print("сиз жазган саннын ай август")
    if month == 9 : print("сиз жазган саннын ай сентябрь")
    if month == 10: print("сиз жазган саннын ай октябрь")
    if month == 11: print("сиз жазган саннын ай ноябрь")
    if month == 12: print("сиз жазган саннын ай декабрь")
    if month > 12 or month <= 0 :
        print(f"\tВВОД СОВЕРШЕН НЕПРАВИЛЬНО!!! \n\tПожалуйста введите цифру от 1го до 12ти!")
        month = int(input("Пожалуйста введите номер месяца от 1го до 12ти: "))
        continue
    mlist = ["зима", "весна", "лето", "осень"]
    if month == 12 or (month >= 1 and month < 3):
        print(f"\tСезон вашего введенного месяца{month}  это '{mlist[0]}'")
        break
    elif month >= 3 and month < 6:
        print(f"\tСезон вашего введенного месяца {month} это '{mlist[1]}'")
        break
    elif month >= 6 and month < 9:
        print(f"\tСезон вашего введенного месяца {month} это '{mlist[2]}'")
        break
    elif month >= 9 and month < 12:
        print(f"\tСезон вашего введенного месяца {month} это '{mlist[3]}'")
        break

